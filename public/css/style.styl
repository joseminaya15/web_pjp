$light       = 'RobotoLight'
$regular     = 'RobotoRegular'
$medium      = 'RobotoMedium'
$bold        = 'RobotoBold'
$color       = #149DCC
body
	font-family $regular
	color #000000
h2
p
	margin 0
img
	width 100%
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items flex-start
.jm-flex
	flexCenter()
.jm-section
	position relative
	padding 20px
.jm-container
	width 100%
	max-width 1100px
	margin auto
.jm-header
	background-color #F1F3F4
	.jm-idioma
		padding 10px 0
		text-align right
		.mdl-button
			text-decoration none
			text-transform none
			font-family $bold
			border-radius 10px
			color #818181
			height 30px
			line-height 32px
			background-color #FFFFFF
			&.active
				background-color $color
				color #FFFFFF !important
.navbar-default
	background-color #000000
	margin 0
	border none
	border-radius 0
	.navbar-brand
		padding 10px
		height 100%
		img
			max-width 50px
	.navbar-nav
		&>
			&li
				&>a
					color #FFFFFF
					padding 25px 20px
					&:hover
						color #FFFFFF
				&.active
					&>a
						background-color transparent
						color #FFFFFF
						&:hover
							background-color transparent
							color #FFFFFF
.jarallax
	height calc(100vh - 120px)
	&.height
		height 100%
	.jm-contenido--jarallax
		height 100%
		max-width 600px
		text-align center
		color #000000
		margin auto
		.jm-text--parallax
			padding 80px 0
			color #FFFFFF
			h2
				font-family $bold
footer
	background-color #2E2E2E
	color #FFFFFF
	text-align center
	ul
		margin 0
		padding 0
		margin-bottom 10px
		li
			display inline-block
			list-style none
			padding 0 20px
			a
				color #FFFFFF !important
				text-decoration none !important